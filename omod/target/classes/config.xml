<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>nmrsreports</id>
	<name>NMRS Report Module</name>
	<version>1.0.2-SNAPSHOT</version>
	<package>org.openmrs.module.nmrsreports</package>
	<author>OluwaseunTemiye</author>
	<description>
			This module will install everything that has to do with NMRS
	</description>

	<activator>org.openmrs.module.nmrsreports.NmrsreportsActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/nmrsreports/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.11.6</require_version>

	<require_modules>
		<require_module version="2.9">
			org.openmrs.module.appframework
		</require_module>
		<require_module version="3.9">
			org.openmrs.module.uiframework
		</require_module>
		<require_module version="2.1">
			org.openmrs.module.uicommons
		</require_module>
		<require_module version="1.7">
			org.openmrs.module.appui
		</require_module>
		<require_module version="${reportingModuleVersion}">org.openmrs.module.reporting</require_module>
	</require_modules>

	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.nmrsreports.extension.html.AdminList</class>
	</extension>

	<aware_of_modules>
		<aware_of_module version="2.3">org.openmrs.module.appframework</aware_of_module>

		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>

	
